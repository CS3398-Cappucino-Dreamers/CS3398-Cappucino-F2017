<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ben.fitordie.Login.swipeviews.PageTwoFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/ptsCircle"
        android:layout_width="100dp"
        android:layout_height="89dp"
        app:srcCompat="@drawable/pts_circle"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/fragTwoInfo"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/fragTwoInfo" />

    <ImageView
        android:id="@+id/avatarJoy"
        android:layout_width="199dp"
        android:layout_height="204dp"
        app:srcCompat="@drawable/avatar_joy"
        app:layout_constraintTop_toTopOf="@+id/pointsText"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/fragTwoInfo"
        android:textAlignment="center"
        android:textColor="@color/blackishGray"
        android:inputType="textMultiLine"
        android:layout_width="297dp"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:text="@string/fragmentTwoInfo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.509" />

    <TextView
        android:textColor="@color/blackishGray"
        android:id="@+id/pointsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragmentTwoPts"
        app:layout_constraintTop_toTopOf="@+id/ptsCircle"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ptsCircle"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/ptsCircle"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/ptsCircle" />
</android.support.constraint.ConstraintLayout>
