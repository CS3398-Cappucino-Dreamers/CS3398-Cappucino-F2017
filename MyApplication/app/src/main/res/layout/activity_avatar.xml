<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blackishGray">

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="390dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/femalebackground"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ImageView
        android:id="@+id/maleIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.031"
        app:srcCompat="@drawable/maleicon" />

    <ImageView
        android:id="@+id/femaleIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.031"
        app:srcCompat="@drawable/femaleicon" />

    <ImageView
        android:id="@+id/skin"
        android:layout_width="266dp"
        android:layout_height="365dp"
        app:srcCompat="@drawable/female_skin_pale"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.158"
        app:layout_constraintHorizontal_bias="0.504" />>

    <ImageView
        android:id="@+id/eyes"
        android:layout_width="266dp"
        android:layout_height="365dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.158"
        app:srcCompat="@drawable/female_eyes_blue" />
    <ImageView
        android:id="@+id/hair"
        android:layout_width="266dp"
        android:layout_height="365dp"
        app:srcCompat="@drawable/female_hair_blond"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.158"
        app:layout_constraintHorizontal_bias="0.504" />

    <ImageView
        android:id="@+id/gender"
        android:layout_width="266dp"
        android:layout_height="365dp"
        app:srcCompat="@drawable/female_lines"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.158"
        app:layout_constraintHorizontal_bias="0.504" />

    <ImageView
        android:id="@+id/menuBackground"
        android:layout_width="0dp"
        android:layout_height="196dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="-1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/menutexture"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/background" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:titleTextColor="@color/lightGray"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_marginTop="0dp" />

    <SeekBar
        android:id="@+id/skinBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="139dp"
        android:layout_height="32dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="40dp"
        android:max="2"
        android:progress="0"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/attributes"
        app:layout_constraintTop_toBottomOf="@+id/gender" />

    <SeekBar
        android:id="@+id/eyeBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="139dp"
        android:layout_height="32dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="40dp"
        android:max="2"
        android:progress="0"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/attributes"
        app:layout_constraintTop_toBottomOf="@+id/gender" />

    <SeekBar
        android:id="@+id/hairBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="139dp"
        android:layout_height="32dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="40dp"
        android:max="2"
        android:progress="0"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/attributes"
        app:layout_constraintTop_toBottomOf="@+id/gender"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <SeekBar
        android:id="@+id/genderBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="203dp"
        android:layout_height="33dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:max="1"
        android:progress="0"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.084" />

    <RadioGroup
        android:id="@+id/attributes"
        android:layout_width="116dp"
        android:layout_height="126dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="250dp"
        android:layout_marginTop="28dp"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/gender">

        <RadioButton
            android:id="@+id/skinChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skin Color" />

        <RadioButton
            android:id="@+id/hairChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hair Color" />

        <RadioButton
            android:id="@+id/eyeChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eye Color" />

    </RadioGroup>


</android.support.constraint.ConstraintLayout>